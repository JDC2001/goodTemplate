page {
  background-color:white;
}
.bgc {
  width:100%;
  height:240px;
  position:relative;
}
.bg {
  width:100%;
  height: 100%;
}
.mineDyn {
  height:50px;
  width:50px;
  border-radius:50%;
  right:5px;
  bottom:-15px;
  position:absolute;
  box-shadow:0 0 0 2px white;
}
.relmeDyn{
  position:fixed;
  top:50px;
  text-align:center;
  width:100px;
  left:50%;
  color:white;
  margin-left:-50px;
  background-color:#285A85;
  box-shadow:0 0 0 2px white;
  padding:1px 0px; 
}
.fresh {
  width:100%;
  text-align:center;
  position:fixed;
  background-color:#3879D9;
  color:white;
}
.fresh-result{
  font-size: 13px;
}
.dyn {
  display:flex;
  flex-direction:column;
  background-color:white;
}
.dyn-item {
    display:flex;
    flex-direction:row;
    margin:10px 15px;
    border-bottom:1px solid #eee
}
.dyn-icon {
    width:40px;
    height:40px;
    border-radius:50%;
}
.dyn-content {
    margin-left:10px;
    display:flex;
    flex-direction:column;
}
.user-name{
    color:#5D718D;
}
.status-time {
  display:flex;
  flex-direction:row;
  margin-top:5px;
  font-size:10px;
  height:20px;
  position:relative;
}
.content-msg{
    padding:1px 0px;
    font-family:"微软雅黑";
    color:#4B4B4B;
    margin-top:3px;
    word-break:break-all;
}
.bottomLoad {
  text-align:center;
  color:grey;
  font-style:italic;
  margin-bottom:5px;
}
.detail {
  color:#5D718D;
  margin-top:10px;
  width:40px;
}
.reply{
  width:20px;
  height:20px;
  position:absolute;
  bottom:3px;
}
.good {
  right:25px;
  bottom:4px;
}
.response{
  right:45px;
  width:35px;
  line-height:20px;
  font-size:12px;
  color:gray;
}
.goodNum {
  right: 5px;
  line-height: 20px;
  bottom:2px;
}
.comments{
  margin-bottom:5px;
  background-color:#eee;
}
.comment{
  font-size:13px;
  padding: 2.5px 5px 2.5px 5px;
  font-family:"微软雅黑";
  border-radius:5px;
  word-break:break-all;
}
.all-comment {
  color: #5D718D;
  font-size:13px;
  padding: 2.5px 5px 2.5px 5px;
  font-family:"微软雅黑";
}
.goods{
  background-color:#eee;
  font-size:13px;
  margin-bottom:5px;
  color:#5D718D;
}