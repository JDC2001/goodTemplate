.msg-item {
    display:flex;
    flex-direction:row;
    margin:10px 15px;
}
.msg-icon {
    margin-top:5px;
    width:30px;
    height:30px;
    border-radius:50%;
}
.msg-content {
    margin-left:10px;
    display:flex;
    flex-direction:column;
}
.name-time{
    margin-top: 2px;
    font-size:10px;
    color:gray;
}
.content-msg{
    padding:8px 10px;
    font-family:"微软雅黑";
    border-radius:5px;
    font-size:15px;
    background-color:white;
    color:#4B4B4B;
    border:1px solid #E1E0E4;
    margin-top:3px;
    word-break:break-all;
    line-height:24px;
}
.apv {
  width:225px;
  padding:0px 0px;
}
.apv-title{
  padding:8px 10px 5px 10px;
  background-color:#285A85;
  color:white;
}
.apv-content{
  color:grey;
  padding:8px 10px 8px 10px;
  border:2px solid #F6F6F6;
  border-width:0px 0px 2px 0px;
}
.apv-do{
  padding:5px 10px 8px 10px;
  display:flex;
  flex-direction:row;
  position:relative;
}
.right-image {
  width:20px;
  height:20px;
  position:absolute;
  right:10px;
}
.toUpUnRead{
    background-color:#265a88;
    color:#FFFFFF;
    display:inline-block;
    line-height:1.3;
    font-size:15px;
    padding:5px 10px;
    top:40px;
    position:fixed;
    right:0px;
    border-radius:10px 0 0 10px;
}
.toDownUnRead {
    background-color:#265a88;
    color:#FFFFFF;
    display:inline-block;
    line-height:1.3;
    font-size:15px;
    padding:5px 10px;
    bottom:40px;
    position:fixed;
    right:0px;
    border-radius:10px 0 0 10px;
}
.fresh {
  width: 100%;
  text-align: center;
  margin-top: 15px;
}
.timer{
  width: 20px;
  height: 20px;
}
.end-image{
  width:60px;
  height:60px;
  padding:8px 0px 8px 5px;
}
.msg-end {
  display:flex;
  flex-direction:row;
  background-color:white;
}
.end-msg {
  padding:8px 5px;
  font-family:"微软雅黑";
  font-size:15px;
  color:#4B4B4B;
  margin-top:3px;
  word-break:break-all;
  line-height:24px;
}