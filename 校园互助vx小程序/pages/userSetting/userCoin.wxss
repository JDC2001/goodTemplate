/* pages/userSetting/userCoin.wxss */
page {
  background-color: #efefef;
}

.basicinfo {
  position: relative;
  width: 100%;
  height: 200rpx;
  color: #fff;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background-color: rgba(43, 172, 120, 0.7);
}

.basicinfo .basicinfo-title {
  font-size: 13px;
}

.basicinfo .basicinfo-content {
  font-size: 40px;
}

.page-wrapper {
  margin: 0;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  background-color: #efefef;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  -webkit-tap-highlight-color: transparent;
  /* min-height: 2000rpx; */
}

.notice {
  margin: 10rpx;
  display: flex;
  justify-content:center;
}

.coin-list .coin-list-item {
  position: relative;
  height: 160rpx;
  background-color: #fff;
  border: 2rpx solid #e5e5e5;
  border-width: 2rpx 0;
}

.coin-list .coin-list-item .change {
  position: absolute;
  right: 0;
  width: 120rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  font-size: 30rpx;
}

.coin-list .coin-list-item .up {
  color: #00b358;
}

.coin-list .coin-list-item .down {
  color: #c43e3e;
}

.coin-list .coin-list-item .detail {
  margin: 0 20rpx;
  height: 80rpx;
  padding: 36rpx 0;
}

.coin-list .coin-list-item .content {
  margin: 0 10rpx 5rpx 10rpx;
  color: #333;
  font-size: 14px;
}

.coin-list .coin-list-item .time {
  margin: 5rpx 10rpx 0rpx 10rpx;
  color: rgb(161, 161, 161);
  font-size: 13px;
}